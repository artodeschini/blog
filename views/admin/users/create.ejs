<div class="container">
    <hr>
    <div class="card mt-4"> <!-- no bootstrap mt é margin top 
        há ainda * mr magin right ml left * mb margin botton-->
        <div class="card-header">
            <h2>Cadastro de usuários</h2>
        </div>
        <div class="card-body">
            <form method="POST" action="/admin/users/create">
                <input type="hidden" name="id">
                <label for="email">Email</label>
                <input type="text" name="email" class="form-control"
                    placeholder="Defina o email do usuário"/>
           
                <br>
                <label for="password">Senha</label>
                <input type="password" name="password" class="form-control"
                    placeholder="Defina a senha do usuário"/>
           
                <br>
                <button class="btn btn-success">Cadastrar</button>
                <!-- o btn-block fará que o bottao ocupe todo o espaco do card
                <button class="btn btn-success btn-block">Cadastrar</button> -->
            </form>
    </div>
    </div>
</div>

