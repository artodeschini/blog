<%- include('../../partials/header.ejs'); %>
<%- include('../../partials/navbar.ejs'); %>

<div class="container">
    <hr>
    <h2>Usuários</h2>
    <a href="/admin/users/create" class="btn btn-success">Criar Novo Usuário</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Código</td>
                <td>email</td>
                <td>Ações</td>
            </tr>
        </thead>
        <tbody>
        <% users.forEach(u => { %>
            <tr>
                <td><%= u.id %></td>
                <td><%= u.email %></td>
                <td>
                    <a href="/admin/users/edit/<%= u.id %>" class="btn btn-warning">Editar</a>
                    <form method="POST" action="/admin/users/delete" style="display: inline" onsubmit="checkDelete(event, this, 'o usuário')">
                        <input type="hidden" name="id" value="<%= u.id %>"/>
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>

<%- include('../../partials/footer.ejs'); %>