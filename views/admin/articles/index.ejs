<%- include('../../partials/header.ejs'); %>
<%- include('../../partials/navbar.ejs'); %>

<div class="container">
    <hr>
    <h2>Artigos</h2>
    <a href="/admin/articles/new" class="btn btn-success">Criar Novo Artigo</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Código</td>
                <td>Titulo</td>
                <td>Slug</td>
                <td>Categoria</td>
                <td>Ações</td>
            </tr>
        </thead>
        <tbody>
        <% articles.forEach(article => { %>
            <tr>
                <td><%= article.id %></td>
                <td><%= article.title %></td>
                <td><%= article.slug %></td>
                <td><%= categories.get(article.categoryId).title %></td>
                <td>
                    <a href="/admin/articles/edit/<%= article.id %>" class="btn btn-warning">Editar</a>
                    <form method="POST" action="/articles/delete" style="display: inline" onsubmit="checkDeleteCategory(event, this, 'o artigo')">
                        <input type="hidden" name="id" value="<%= article.id %>"/>
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
</div>

